<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/posIdContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonContainer"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="开屏广告位id："
            android:textSize="18dp" />

        <EditText
            android:id="@+id/posId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="" />
    </LinearLayout>

    <Spinner
        android:id="@+id/id_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="开屏广告位是否显示logo"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/checkCustomSkp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:text="是否自定义跳过按钮"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/checkBoxFloatView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="开屏广告位是否显示浮层"
        android:textSize="18dp" />

    <CheckBox
        android:id="@+id/checkBoxPreloadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="开屏广告位是否显示自定义预加载按钮"
        android:textSize="18dp" />

    <Button
        android:id="@+id/splashADPreloadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预加载合约开屏广告" />

    <Button
        android:id="@+id/splashADDemoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拉取并显示开屏广告" />

    <Button
        android:id="@+id/splashFetchAdOnly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拉取与显示分离" />


</LinearLayout>
